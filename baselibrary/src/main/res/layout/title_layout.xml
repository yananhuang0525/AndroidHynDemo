<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_title_high"
    android:background="@color/base_bg_title"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_high"
        android:background="@color/base_bg_title"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_back"
            style="@style/base_title_left_ll">

            <ImageView style="@style/base_title_left_iv" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/base_title_text"
            android:text="标题" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/base_title_right_tv"
            android:text="操作"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>